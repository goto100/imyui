	<item>
		<name>MLTR 中文站</name>
		<picture src="images/mltr-cn.png" />
		<screen-shot src="images/mltr-cn_1.png" />
		<screen-shot src="images/mltr-cn_2.png" />
		<screen-shot src="images/mltr-cn_3.png" />
